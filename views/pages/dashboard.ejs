<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - DayTrack</title>
    <link rel="stylesheet" href="dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo-section">
                <img src="/assets/dayTrackLogo.png" alt="DayTrack Logo" class="logo">
            </div>
            <nav class="nav-menu">
                <div class="nav-item active">
                    <i class="fas fa-chart-pie"></i>
                    <span>Dashboard</span>
                </div>
                <div class="nav-item" onclick="window.location.href='/tarefas'">
                    <i class="fas fa-tasks"></i>
                    <span>Tarefas</span>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <div class="search-container">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Pesquisar..." class="search-input">
                </div>
                <div class="header-actions">
                    <button class="new-task-btn" id="new-task-btn" onclick="window.location.href='/nova-tarefa'">+ Nova Tarefa
                    </button>
                    <i class="fas fa-bell notification-icon"></i>
                    <i class="fas fa-user-circle profile-icon"></i>
                </div>
            </header>

            <div class="content-wrapper">
                <!-- Page Title -->
                <h1 class="page-title">Dashboard</h1>

                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total de Tarefas</h3>
                        <p class="stat-description">Todas as suas tarefas</p>
                        <div class="stat-number">4</div>
                    </div>
                    <div class="stat-card">
                        <h3>Pendentes</h3>
                        <p class="stat-description">Tarefas a fazer</p>
                        <div class="stat-number">3</div>
                    </div>
                    <div class="stat-card">
                        <h3>Concluídas</h3>
                        <p class="stat-description">Tarefas finalizadas</p>
                        <div class="stat-number">1</div>
                    </div>
                    <div class="stat-card">
                        <h3>Para Hoje</h3>
                        <p class="stat-description">Tarefas do dia</p>
                        <div class="stat-number">2</div>
                    </div>
                </div>

                <!-- Tasks and Calendar Section -->
                <div class="bottom-section">
                    <!-- Tasks Section -->
                    <div class="tasks-section">
                        <div class="tasks-header">
                            <div class="tab active" data-tab="hoje">Hoje</div>
                            <div class="tab" data-tab="proximas">Próximas</div>
                            <div class="tab" data-tab="concluidas">Concluídas</div>
                        </div>
                        <div class="tasks-content">
                            <h2>Tarefas de Hoje</h2>
                            <p class="tasks-subtitle">Gerencie suas tarefas do dia</p>

                            <div class="task-list">
                                <div class="task-item">
                                    <input type="checkbox" id="task1" class="task-checkbox">
                                    <label for="task1" class="task-content">
                                        <span class="task-title">Enviar relatório</span>
                                        <span class="task-description">Relatório mensal de atividades</span>
                                    </label>
                                    <i class="fas fa-trash task-delete"></i>
                                </div>

                                <div class="task-item">
                                    <input type="checkbox" id="task2" class="task-checkbox" checked>
                                    <label for="task2" class="task-content">
                                        <span class="task-title">Reunião com equipe</span>
                                        <span class="task-description">Discutir novas ideias</span>
                                    </label>
                                    <i class="fas fa-trash task-delete"></i>
                                </div>

                                <div class="task-item">
                                    <input type="checkbox" id="task3" class="task-checkbox">
                                    <label for="task3" class="task-content">
                                        <span class="task-title">Responder emails</span>
                                        <span class="task-description">Verificar caixa de entrada</span>
                                    </label>
                                    <i class="fas fa-trash task-delete"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script src="/scripts/dashboard.js"></script>
</body>

</html>